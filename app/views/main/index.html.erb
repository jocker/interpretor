
<script type="text/javascript" language="JavaScript" src="/ext/extensions.js"></script>

<style type="text/css">
    .slide-layout{
        position:absolute;
    }
</style>

<script language="javascript" type="text/javascript">
    Ext.Loader.config.enabled = true
    Ext.Loader.setPath("Fwk", "/js/fwk")
    Ext.Loader.setPath("Crs", "/js/crs")




    Ext.require(["Fwk.routing.Router", "Crs.app.data.Endpoints"], function() {
        Fwk.routing.Router.map(function(map) {
            map("main",{instance:"main", controller:"main", action:"index"})
            map("login",{instance:"login", controller:"login", action:"index"})
            map("register",{instance:"login", controller:"login", action:"register"})

            map(":instance/:language/new",{controller:"interpretor", action:"index"})
            map(":instance/:language/show/:id",{controller:"interpretor", action:"index"})
            map(":instance/channels/:channel",{controller:"channels", action:"index"})
            map(":instance/:controller/:action")



            Ext.require("Crs.app.App", function(){

                <%= raw app_init %>

            })

        })
    })





    Ext.onReady(function(){


    })


</script>

